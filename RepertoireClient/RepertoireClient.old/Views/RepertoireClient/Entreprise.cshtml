@{
    Layout = "~/Views/Shared/_Layout.RepertoireClient.cshtml";
    ViewBag.Title = Model.Nom;
}

<script type="text/javascript" src="~/Scripts/Models.js"></script>
<script type="text/javascript" src="~/Scripts/IO.js"></script>

<style>
    .transparent {
        background-color: transparent;
        border-style: none;
        width: 100%;
    }

    table {
        width: 100%;
    }
</style>

<div class="jumbotron row">
    <div class="col-md-6">
        <h1>@Model.Nom</h1>
        <p>Tel : @Model.Telephone</p>
        <p>Fax : @Model.Fax</p>
        <p>@Model.Code_Ordre</p>
        <p><input id="web_site" type="button" onclick="window.open('@Model.Site', '_blank');" class="btn btn-primary btn-lg" value="Site Web &raquo;" /></p>
    </div>
    <div class="col-md-6">
        <h2>Horraires</h2>
        <p>Du @Model.OuvertureAM.DayOfWeek au @Model.FermeturePM.DayOfWeek</p>
        <p>De @Model.OuvertureAM.ToString("H:mm") à @Model.FermetureAM.ToString("H:mm") - @Model.OuverturePM.ToString("H:mm") à @Model.FermeturePM.ToString("H:mm")</p>
        <p>Sauf le @Model.Fermeture_exceptionnelleAM.DayOfWeek de @Model.Fermeture_exceptionnelleAM.ToString("H:mm") à @Model.Fermeture_exceptionnellePM.ToString("H:mm")<br/>
        (@Model.Fermeture_exceptionnelleSpecification)</p>
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Coordonnées</h2>
        <p>@Model.Rue - @Model.Code_Postal</p>
        <p>@Model.Ville</p>
    </div>
    <div class="col-md-8">
        @if (Model.Contacts.Count > 1)
        {
            <h2>Contacts</h2>
        }
        else
        {
            <h2>Contact</h2>
        }
        @if (Model.Contacts.Count > 9)
        {
            <table id="contacts" style="max-height: 200px;overflow: auto;display: block;">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>e-Mail</th>
                        <th>Téléphone</th>
                    </tr>
                </thead>
                <tbody id="contact_content">
                    @for (var i = 0; i < Model.Contacts.Count; i++)
                    {
                        <tr>
                            <td>@Model.Contacts[i].Nom</td>
                            <td>@Model.Contacts[i].Mail</td>
                            <td>@Model.Contacts[i].Telephone</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <table id="contacts" style="">
                <thead>
                    <tr>
                        <th>Nom</th>
                        <th>e-Mail</th>
                        <th>Téléphone</th>
                    </tr>
                </thead>
                <tbody id="contact_content">
                    @for (var i = 0; i < Model.Contacts.Count; i++)
                    {
                        <tr>
                            <td>@Model.Contacts[i].Nom</td>
                            <td>@Model.Contacts[i].Mail</td>
                            <td>@Model.Contacts[i].Telephone</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
    </div>
</div>
<div class="row">
    <div class="col-md-4">
        <h2>Compétences</h2>
        <ul>
            @if (Model.Porteur)
            {
                <li>Porteur</li>
            }
            @if (Model.Semis_Remorque)
            {
                <li>Semis-Remorque</li>
            }
            @if (Model.Vul)
            {
                <li>Vul</li>
            }
            @if (Model.Haillon)
            {
                <li>Haillon</li>
            }
            @if (Model.Tire_Palette)
            {
                <li>Tire palette</li>
            }
            @if (Model.Remorque_Tautliner)
            {
                <li>Remorque tautliner</li>
            }
            @if (Model.Remorque_Fourgon)
            {
                <li>Remorque fourgon</li>
            }
            @if (Model.Remorque_Frigorifique)
            {
                <li>Remorque frigorifique</li>
            }
        </ul>
    </div>
    <div class="col-md-8">
        <h2>Commentaire(s)</h2>
        <p>@Model.Commentaire</p>
    </div>
</div>
